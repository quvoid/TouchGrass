{
    "manifest_version": 3,
    "name": "TouchGrass",
    "version": "1.1",
    "description": "Stop doomscrolling. Go outside. A passive-aggressive productivity tool.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Reality Check"
    }
}